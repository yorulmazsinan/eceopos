{
	"name": "eceo/pos",
	"description": "E-CEO uygulamaları için geliştirilen POS paketi.",
	"require": {
		"php": ">=8.0",
		"symfony/serializer": "^5.0"
	},
	"require-dev": {
		"laravel/pint": "^1.6"
	},
	"autoload": {
		"psr-4": {
			"EceoPos\\": "src/"
		},
		"files": [
			"src\\Helpers.php"
		]
	},
	"autoload-dev": {
		"psr-4": {

		}
	},
	"config": {
		"sort-packages": true
	},
	"extra": {
		"laravel": {
			"providers": [
				"EceoPos\\EceoPosServiceProvider"
			]
		}
	},
	"scripts": {
		"test": "./vendor/bin/phpunit",
		"test-coverage": "./vendor/bin/phpunit --coverage-html coverage",
		"project-clean-code": [
			"./vendor/bin/pint"
		]
	}
}
